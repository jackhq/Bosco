%p  
  %label{:for => "#{form}_#{name}"}= title
  %br
  - rows.each_with_index do |r, i| 
    %label= r
    - columns.each do |c|
      - if answer_list && answer_list[i] && answer_list[i][r] == c 
        %input{:type => 'radio', :id => "#{form}_#{name}_#{r}_#{c}", :name => "#{form}[#{name}_#{r}]", :value => c, :checked => true }
      - else
        %input{:type => 'radio', :id => "#{form}_#{name}_#{r}_#{c}", :name => "#{form}[#{name}_#{r}]", :value => c }
      
      %label= c
    %br
